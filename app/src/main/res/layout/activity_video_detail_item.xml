<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:paddingTop="3dp"
    tools:context=".video.VideoDetailActivity">

    <TextView
        android:id="@+id/item_name_tv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#FFFF00"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="北京 01"
        />

    <LinearLayout
        android:id="@+id/item_image_layout"
        android:layout_width="200dp"
        android:layout_height="15dp"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:gravity="right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_name_tv"
        >
        <TextView
            android:id="@+id/item_name_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="right"
            android:layout_marginRight="2dp"
            tools:text="北京 01"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/item_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginLeft="4dp"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_image_layout"
        tools:text="123"
        />

</androidx.constraintlayout.widget.ConstraintLayout>